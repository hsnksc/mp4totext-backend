# =============================================================================
# MP4toText Backend - DEVELOPMENT Environment
# =============================================================================

ENVIRONMENT=development
DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production

# Database (SQLite for development)
DATABASE_URL=sqlite:///./mp4totext.db
DB_ECHO=False

# Redis (Local, no password)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Storage (Local MinIO)
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=mp4totext
STORAGE_REGION=us-east-1
STORAGE_SECURE=False

# AI Services (Use your actual keys)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-lite

USE_OPENAI=False
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

USE_GROQ=False
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile

TOGETHER_API_KEY=your-together-api-key-here
TOGETHER_MODEL=meta-llama/Llama-2-13b-chat-hf

TAVILY_API_KEY=your-tavily-api-key-here
ENABLE_WEB_SEARCH=True

# Whisper
WHISPER_MODEL_SIZE=large-v3
WHISPER_DEVICE=cpu
USE_FASTER_WHISPER=True
FASTER_WHISPER_MODEL=large-v3
FASTER_WHISPER_DEVICE=auto

# CORS (Mobile dev server)
CORS_ORIGINS=["http://localhost:3000","http://localhost:19006","http://localhost:8081","http://10.0.2.2:8002"]

# Monitoring (Development - simple auth)
FLOWER_USER=admin
FLOWER_PASSWORD=admin123

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/mp4totext_dev.log

# Credits
DEFAULT_FREE_CREDITS=10000  # More credits for development testing
CREDIT_PRICE_PER_100=1.0

# Upload
MAX_UPLOAD_SIZE_MB=200
TEMP_UPLOAD_DIR=/tmp/mp4totext_uploads
