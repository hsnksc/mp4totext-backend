# =============================================================================
# MP4toText Backend - PRODUCTION Environment
# =============================================================================
# ⚠️ IMPORTANT: Fill in all values before deploying to production
# ⚠️ SECURITY: Never commit this file to Git
# =============================================================================

ENVIRONMENT=production
DEBUG=False
SECRET_KEY=CHANGE-THIS-TO-SECURE-RANDOM-STRING-IN-PRODUCTION

# Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://username:password@hostname:5432/mp4totext
DB_ECHO=False

# Redis (MUST have password in production)
REDIS_HOST=redis-production-host
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=CHANGE-THIS-SECURE-REDIS-PASSWORD
REDIS_URL=redis://:CHANGE-THIS-SECURE-REDIS-PASSWORD@redis-production-host:6379/0

# Celery
CELERY_BROKER_URL=redis://:CHANGE-THIS-SECURE-REDIS-PASSWORD@redis-production-host:6379/0
CELERY_RESULT_BACKEND=redis://:CHANGE-THIS-SECURE-REDIS-PASSWORD@redis-production-host:6379/1

# Storage (AWS S3 or compatible)
STORAGE_ENDPOINT=s3.amazonaws.com  # Or your MinIO endpoint
STORAGE_ACCESS_KEY=CHANGE-THIS-S3-ACCESS-KEY
STORAGE_SECRET_KEY=CHANGE-THIS-S3-SECRET-KEY
STORAGE_BUCKET=mp4totext-production
STORAGE_REGION=us-east-1
STORAGE_SECURE=True  # HTTPS for production

# AI Services (Production keys - high rate limits)
GEMINI_API_KEY=CHANGE-THIS-GEMINI-PRODUCTION-KEY
GEMINI_MODEL=gemini-2.0-flash-lite

USE_OPENAI=True
OPENAI_API_KEY=CHANGE-THIS-OPENAI-PRODUCTION-KEY
OPENAI_MODEL=gpt-4o-mini

USE_GROQ=True
GROQ_API_KEY=CHANGE-THIS-GROQ-PRODUCTION-KEY
GROQ_MODEL=llama-3.3-70b-versatile

TOGETHER_API_KEY=CHANGE-THIS-TOGETHER-PRODUCTION-KEY
TOGETHER_MODEL=meta-llama/Llama-2-13b-chat-hf
TOGETHER_TEMPERATURE=0.2
TOGETHER_MAX_TOKENS=4000

TAVILY_API_KEY=CHANGE-THIS-TAVILY-PRODUCTION-KEY
ENABLE_WEB_SEARCH=True

# Whisper (CPU or GPU based on server)
WHISPER_MODEL_SIZE=large-v3
WHISPER_DEVICE=cuda  # cuda if GPU available, cpu otherwise
USE_FASTER_WHISPER=True
FASTER_WHISPER_MODEL=large-v3
FASTER_WHISPER_DEVICE=cuda
FASTER_WHISPER_COMPUTE_TYPE=float16

# CORS (Production frontend URLs)
CORS_ORIGINS=["https://app.yourdomain.com","https://web.yourdomain.com","https://api.yourdomain.com"]

# Monitoring (Production - strong password)
FLOWER_USER=admin
FLOWER_PASSWORD=CHANGE-THIS-SECURE-FLOWER-PASSWORD

# Logging (Production level)
LOG_LEVEL=WARNING
LOG_FILE=/var/log/mp4totext/production.log

# Credits
DEFAULT_FREE_CREDITS=100  # Lower for production
CREDIT_PRICE_PER_100=1.0

# Upload
MAX_UPLOAD_SIZE_MB=200
TEMP_UPLOAD_DIR=/tmp/mp4totext_uploads

# =============================================================================
# DEPLOYMENT CHECKLIST:
# =============================================================================
# [ ] Change SECRET_KEY to random secure string
# [ ] Set strong REDIS_PASSWORD
# [ ] Configure production database (PostgreSQL)
# [ ] Set all API keys with production credentials
# [ ] Update CORS_ORIGINS with actual frontend URLs
# [ ] Set strong FLOWER_PASSWORD
# [ ] Verify STORAGE_ENDPOINT and credentials
# [ ] Configure SSL/HTTPS for storage (STORAGE_SECURE=True)
# [ ] Set up log rotation for LOG_FILE
# [ ] Configure backup strategy for database
# [ ] Set up monitoring alerts
# [ ] Test all services before going live
# =============================================================================
